<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/backgroundDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light.Bridge" />

    <style name="valData" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#74DF00</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherCards" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">30dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="airChips">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="shimmerFrame">
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">vertical</item>
        <item name="elevation">20dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.Dialogs" parent="ThemeOverlay.MaterialComponents.Dark" >
        <item name="android:buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>
</resources>
