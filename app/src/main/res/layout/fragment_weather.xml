<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/swipeLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".views.WeatherActivity">

	<androidx.core.widget.NestedScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/backgroundDark"
		tools:showIn="@layout/activity_weather">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="30dp"
			android:animateLayoutChanges="true"
			android:orientation="vertical"
			android:paddingBottom="30dp">

			<include
				android:id="@+id/date_header"
				layout="@layout/date_header" />

			<include
				android:id="@+id/current_card"
				layout="@layout/card_current" />

			<include
				android:id="@+id/hourly_forecast"
				layout="@layout/card_forecast" />

			<include
				android:id="@+id/current_extra_card"
				layout="@layout/card_current_extra" />

			<include
				android:id="@+id/air_card"
				layout="@layout/card_air_response" />

			<include
				android:id="@+id/wind_card"
				layout="@layout/card_wind" />

			<include
				android:id="@+id/sun_card"
				layout="@layout/card_sun" />

			<include
				android:id="@+id/daily_forecast"
				layout="@layout/card_forecast" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
