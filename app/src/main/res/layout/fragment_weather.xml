<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:shimmer="http://schemas.android.com/apk/res-auto"
	android:id="@+id/swipeLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".views.WeatherActivity">

	<androidx.core.widget.NestedScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/backgroundDark"
		tools:showIn="@layout/activity_weather">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="30dp"
			android:animateLayoutChanges="true"
			android:orientation="vertical"
			android:paddingBottom="30dp">

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/dateCard"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:backgroundTint="@color/colorAccent"
				android:minWidth="50dp"
				android:paddingVertical="20dp"
				android:theme="@style/Theme.MaterialComponents.DayNight"
				android:translationZ="10dp"
				app:cardCornerRadius="30dp"
				app:cardElevation="10dp">

				<TextView
					android:id="@+id/date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="20dp"
					android:text="@string/today_s_date"
					android:textSize="20sp"
					android:textColor="@android:color/white" />
			</com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="-30dp"
                android:backgroundTint="@color/white"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                app:cardCornerRadius="30dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/currentShimmer"
                    style="@style/shimmerFrame"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    shimmer:duration="800"
                    app:shimmer_base_color="#000000"
                    app:shimmer_colored="true"
                    app:shimmer_highlight_color="#000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/placeholder_card" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/currentCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/CurrentTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/_0_c"
                            android:textColor="@android:color/black"
                            android:textSize="60sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/LowTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/_0_c"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/HighTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/_0_c"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/RealFeelTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/real_feel_0_c"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hourlyForecastCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2B2B2B"
                android:layout_marginHorizontal="20dp"
                style="@style/WeatherCards"
                android:animateLayoutChanges="true"
                app:cardElevation="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hourly_forecast"
                    android:paddingVertical="20dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/display_forecast"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/down"
                    app:tint="@color/white"
                    android:contentDescription="@null" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
	            android:id="@+id/rv_hourly_forecast"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
	            android:layout_marginTop="-30dp"
	            android:elevation="15dp"
	            android:visibility="gone"
	            android:orientation="horizontal"
	            tools:listitem="@layout/hourly_forecast_item" />

			<com.google.android.material.card.MaterialCardView
				style="@style/WeatherCards"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="10dp"
				android:backgroundTint="@color/currentEXtraCard"
				app:cardElevation="20dp">

				<com.facebook.shimmer.ShimmerFrameLayout
					android:id="@+id/currentExtraShimmer"
					style="@style/shimmerFrame"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="top"
					app:shimmer_base_color="#A30000"
					app:shimmer_colored="true"
					shimmer:duration="800"
					app:shimmer_highlight_color="#A30000">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">

						<include layout="@layout/placeholder_card" />
					</LinearLayout>

				</com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/currentExtraCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/skiesImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/cloud_cover"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/weather"
                        app:tint="@android:color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Precipitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:text="@string/precipitation_0"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/Humidity"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/humidity_0"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/DewPoint"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/dew_point_0_c"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/Pressure"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/pressure_0_mbar"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/UVIndex"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/uv_index_0"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/Visibility"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/visibility_0_m"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/air_response_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
	            app:cardElevation="30dp"
	            android:layout_marginHorizontal="20dp"
	            android:backgroundTint="@color/green_card"
                style="@style/WeatherCards">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/airShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    style="@style/shimmerFrame"
                    shimmer:duration="800"
                    app:shimmer_base_color="#138100"
                    app:shimmer_colored="true"
                    app:shimmer_highlight_color="#138100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card_air" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/airCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:paddingHorizontal="10dp"
	                    android:layout_gravity="start|center_vertical"
	                    android:orientation="vertical">

	                    <TextView
		                    android:id="@+id/airQuality"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:textSize="60sp"
		                    android:layout_gravity="center"
		                    android:text="1"
		                    android:textColor="@color/black" />

	                    <TextView
		                    android:id="@+id/airQualityText"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_gravity="center"
		                    android:text="1"
		                    android:textColor="@color/black"
		                    android:textSize="25sp" />

	                    <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:textSize="18sp"
		                    android:text="@string/air_quality"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_co"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_nh_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_no_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_o_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_pm_ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_pm_two_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_so_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="@null"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#DAFFFB"
                app:cardElevation="40dp"
                android:layout_marginHorizontal="40dp"
                style="@style/WeatherCards">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/windShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    style="@style/shimmerFrame"
                    shimmer:duration="800"
                    app:shimmer_base_color="@color/windCardItems"
                    app:shimmer_colored="true"
                    app:shimmer_highlight_color="@color/windCardItems">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card_sun" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7EC4F2F4"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/airwaves"
                    app:tint="#4BCADA" />

                <LinearLayout
                    android:id="@+id/windCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:elevation="3dp"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/WindSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="60sp"
                        android:text="@null"
                        android:textColor="@color/windCardItems" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/WindDirectionDegrees"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp"
                            android:rotation="-90"
                            android:layout_margin="5dp"
                            android:src="@drawable/direction"
                            android:contentDescription="@string/winddirectionicon"
                            app:tint="@color/windCardItems" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/windCardItems"
                            android:textSize="18sp"
                            android:text="@string/km_h"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/WindDirectionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_marginHorizontal="5dp"
                        android:text="@null"
                        android:textColor="@color/windCardItems" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardElevation="50dp"
                android:layout_marginHorizontal="50dp"
                style="@style/WeatherCards">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/sunShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/shimmerFrame"
                    android:elevation="100dp"
                    shimmer:duration="800"
                    app:shimmer_base_color="#BEFF0033"
                    app:shimmer_colored="true"
                    app:shimmer_highlight_color="#BEFF0033">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card_sun" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

	            <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:elevation="0dp"
		            android:background="@drawable/gradient_sun" />

                <LinearLayout
                    android:id="@+id/sunCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:theme="@style/Theme.MaterialComponents.DayNight">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_time"
                            android:textColor="@android:color/black"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sunrise"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_time"
                            android:textColor="@android:color/black"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sunset"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dailyForecastCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2B2B2B"
                android:layout_marginHorizontal="20dp"
                style="@style/WeatherCards"
                android:animateLayoutChanges="true"
                app:cardElevation="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/DaysForecast"
                    android:paddingVertical="20dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/display_daily_forecast"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/down"
                    app:tint="@color/white"
                    android:contentDescription="@null" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_daily_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="-30dp"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:listitem="@layout/daily_forecast_item"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
