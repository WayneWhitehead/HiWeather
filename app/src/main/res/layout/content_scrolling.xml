<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.WeatherActivity"
    android:animateLayoutChanges="true"
    tools:showIn="@layout/activity_weather">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/backgroundDark"
        tools:context=".ScrollingActivity"
        tools:showIn="@layout/activity_weather">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:paddingVertical="20dp"
                android:backgroundTint="#E4E4E4"
                android:layout_gravity="center"
                android:translationZ="10dp"
                android:minWidth="50dp"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_s_date"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:paddingVertical="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="-30dp"
                android:backgroundTint="@color/white"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/currentShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/shimmerFrame"
                    shimmer:duration="800">

                    <!-- Adding 7 rows of placeholders -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/currentCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/CurrentTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="60sp"
                            android:text="--C"
                            android:textColor="@android:color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/LowTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16sp"
                                android:text="--C"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/HighTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16sp"
                                android:text="--C"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/RealFeelTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:text="Real Feel --C"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#2B2B2B"
                android:layout_marginTop="-15dp"
                android:layout_gravity="center"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hourly_forecast"
                    android:layout_marginHorizontal="75dp"
                    android:paddingVertical="20dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/display_forecast"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/down"
                    app:tint="@color/white"
                    android:contentDescription="@null" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_hourly_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="-30dp"
                android:elevation="100dp"
                android:visibility="gone"
                android:orientation="horizontal"
                tools:listitem="@layout/hourly_forecast_item"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="30dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="30dp"
                android:theme="@style/Theme.MaterialComponents.DayNight">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/currentExtraShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    style="@style/shimmerFrame"
                    shimmer:duration="800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/currentExtraCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Precipitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:text="Precipitation --%"
                            android:textColor="@color/white" />
                        <TextView
                            android:id="@+id/Humidity"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="Humidty --%"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/DewPoint"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="Dew Point --C"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/Pressure"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="Pressure ----mBar"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/UVIndex"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="UV Index -"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/Visibility"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="Visibility ----Km"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/skiesImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/cloud_cover"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/weather"
                        app:tint="@android:color/white" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/air_response_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/greenCard"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                app:cardCornerRadius="30dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/airShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    style="@style/shimmerFrame"
                    shimmer:duration="800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/airCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:layout_gravity="start|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/airQuality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="60sp"
                            android:text="--"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Air Quality"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_co"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_nh_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_no_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_o_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_pm_ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_pm_two_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/air_so_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/airChips"
                            android:text="Co =="/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                app:cardCornerRadius="30dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/windShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    style="@style/shimmerFrame"
                    shimmer:duration="800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/windCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/WindSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="60sp"
                        android:text="--"
                        android:textColor="@android:color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/WindDirectionDegrees"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp"
                            android:rotation="-90"
                            android:layout_margin="5dp"
                            android:src="@drawable/direction"
                            android:contentDescription="@string/winddirectionicon"
                            app:tint="@android:color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:text="@string/km_h"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/WindDirectionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_marginHorizontal="5dp"
                        android:text="--"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginHorizontal="50dp"
                android:padding="20dp"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                app:cardCornerRadius="30dp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/sunShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/shimmerFrame"
                    android:elevation="100dp"
                    shimmer:duration="800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/placeholder_card" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp"
                    android:background="@drawable/gradient"/>

                <LinearLayout
                    android:id="@+id/sunCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:text="--:--"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:text="Sunrise"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:text="--:--"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:text="Sunset"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#2B2B2B"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/DaysForecast"
                    android:layout_marginHorizontal="75dp"
                    android:paddingVertical="20dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"
                    android:textSize="30sp"/>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_daily_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="-50dp"
                android:elevation="10dp"
                android:orientation="horizontal"
                tools:listitem="@layout/daily_forecast_item"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
