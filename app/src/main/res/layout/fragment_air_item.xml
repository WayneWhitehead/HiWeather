<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:animateLayoutChanges="true"
	android:background="#000000"
	android:padding="15dp">

	<NumberPicker
		android:id="@+id/air_picker"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:elevation="100dp"
		android:selectionDividerHeight="0dp"
		android:showDividers="none"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/airValue"
		style="@style/TextAppearance.AppCompat.Headline"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginTop="55dp"
		android:gravity="start"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="@id/air_picker"
		app:layout_constraintEnd_toEndOf="@id/air_picker"
		app:layout_constraintStart_toStartOf="@id/air_picker"
		app:layout_constraintTop_toTopOf="@id/air_picker" />

	<com.jaygoo.widget.VerticalRangeSeekBar
		android:id="@+id/progress"
		android:layout_width="match_parent"
		android:layout_height="400dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:rsb_gravity="bottom"
		app:rsb_indicator_background_color="@color/white"
		app:rsb_indicator_padding_bottom="10dp"
		app:rsb_indicator_padding_left="10dp"
		app:rsb_indicator_padding_right="10dp"
		app:rsb_indicator_padding_top="10dp"
		app:rsb_indicator_radius="10dp"
		app:rsb_indicator_show_mode="alwaysShow"
		app:rsb_indicator_text_color="@color/black"
		app:rsb_indicator_text_size="14sp"
		app:rsb_mode="single"
		app:rsb_orientation="left"
		app:rsb_progress_drawable_default="@drawable/gradient_air_slider"
		app:rsb_progress_height="30dp"
		app:rsb_step_auto_bonding="false"
		app:rsb_step_color="@color/white"
		app:rsb_step_height="20dp"
		app:rsb_step_width="2dp"
		app:rsb_tick_mark_layout_gravity="bottom"
		app:rsb_tick_mark_mode="number"
		app:rsb_tick_mark_text_margin="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>